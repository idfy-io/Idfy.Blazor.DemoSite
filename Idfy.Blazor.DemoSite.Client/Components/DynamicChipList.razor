
<p>@Title</p>
<MatTextField Label="Add new" Outlined="true" Icon="@Icon" OnFocusOut="@((args) => @AddChip())" @bind-Value="@NewValue"></MatTextField>
<MatChipSet>
    @if (ChipList != null)
    {
        @foreach (var chip in ChipList)
        {
            <MatChip LeadingIcon="@Icon" Label="@chip"></MatChip>
        }
    }
</MatChipSet>


@code {
    private string NewValue;

    [Parameter]
    private string Title { get; set; }

    [Parameter]
    private string Icon { get; set; }

    [Parameter]
    private List<string> ChipList { get; set; }

    private void AddChip()
    {
        if (string.IsNullOrWhiteSpace(NewValue))
            return;

        if (ChipList == null) ChipList = new List<string>();

        ChipList.Add(NewValue);
        NewValue = "";
    }
}
